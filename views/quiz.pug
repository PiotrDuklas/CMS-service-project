extends layout

block content
  h1= title
  if show
    form(method="post")
      p Którą płytę U2 uważasz za najlepszą?
      ul
        each item in data
          li
            label=item.title
            input(type="radio" name="quiz" value=item._id)
      input(type="submit" value="Zagłosuj")
      p Aby zobaczyć wyniki głosowania oddaj swój głos
  else
    h1 Dziękujemy za udział w głosowaniu
    p Wyniki głosowania:
    ul
      each item in data
        li #{item.title} #{item.vote} #{item.vote/sum*'100'}%
    p Oddane głosy:#{sum}
